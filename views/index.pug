doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:500,700|Roboto:400,500,700,900")
    link(rel="stylesheet" href='/style.css')
  body.js-body
    header
      img.logo(src='/hog_banner.jpg')

    div.container
      form.view.js-join
        img(src="/richard.jpeg" class="main-image")
        h2="Let's play!"
        input(type='text' name='name' placeholder='Your name' required='required')
        input(type='number' min="1" name='team' placeholder='Your team number' required='required')
        button(type='submit')='Join!'

      div.view.js-joined.hidden
        button.js-buzzer.buzzer()=''
        p.js-joined-info=""
        button.js-edit.secondary='Exit'

    script(src='/socket.io/socket.io.js')
    script(src='/join.js')
